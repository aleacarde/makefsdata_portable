{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Build Directory",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Remove the build directory to clean the build environment."
        },
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build"
            ],
            "dependsOn": "Clean Build Directory",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Run CMake to configure the project."
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "all",
                "--config", "Debug"
            ],
            "dependsOn": "CMake: Configure",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Run CMake to build the project."
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir", "build",
                "--output-on-failure"
            ],
            "group": "test",
            "detail": "Run the tests using CTest."
        }
    ]
}